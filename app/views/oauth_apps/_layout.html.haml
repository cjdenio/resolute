= render "shared/header", selected: "settings"

.w-full.max-w-4xl.block.mx-auto.bg-gray-800.p-7.rounded-md
	%h1.text-xl.mb-10.font-heading.font-semibold
		%span.text-gray-500
			%a.text-gray-500(href="/developer") Settings
			\/ 
			%a.text-gray-500(href="/developer/apps") Apps
			\/ 
		= @app.name

	.flex.gap-7
		.w-64
			%ul.flex.flex-col
				= sidebar_link(title: "OAuth", href: oauth_app_path(@app), selected: selected == "credentials")
				= sidebar_link(title: "Settings", href: edit_oauth_app_path(@app), selected: selected == "settings")
				= sidebar_link(title: "Advanced", href: advanced_oauth_app_path(@app), selected: selected == "advanced")
		.grow
			= render "shared/alert"
			= render "shared/notice"

			= yield