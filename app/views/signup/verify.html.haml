- content_for :page_title, "Sign up"

.flex.items-center.justify-center.h-screen.w-screen.px-5
	.flex.flex-col.gap-5.items-stretch.justify-center.w-full.max-w-sm
		.h-auto.bg-gray-800.border-t-4.border-green-400.rounded-md.p-7.text-white
			= render "shared/alert"
			= render "shared/notice"

			%h2.text-2xl.mb-6.ml-1.font-heading Sign up

			= form_with do |form|
				= form.hidden_field :verification_code, value: @verification_code
				= form.email_field :email, disabled: true, placeholder: "Email", class: "input mb-4", required: true, value: @email
				= form.password_field :password, placeholder: "Password", class: "input mb-6", required: true, autofocus: true

				.flex.justify-between.items-center
					= form.submit "Sign up", class: "btn"