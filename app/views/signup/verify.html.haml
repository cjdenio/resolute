- content_for :page_title, "Sign up"

= render "shared/landing_header"

= render "layouts/sm", title: "Sign up" do
	= form_with do |form|
		= form.hidden_field :verification_code, value: @verification_code
		= form.email_field :email, disabled: true, placeholder: "Email", class: "input mb-4", required: true, value: @email
		= form.password_field :password, placeholder: "Password", class: "input mb-6", required: true, autofocus: true

		.flex.justify-between.items-center
			= form.submit "Sign up", class: "btn"
