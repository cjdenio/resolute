<div class="<%= flash[:highlighted_reminder] == reminder.id && "reminder--highlighted" %> group bg-black text-xl p-5 rounded-md flex justify-between items-center gap-5 border-2 border-transparent relative break-words">
    <h1 class="font-bold break-words min-w-0"><%= reminder.title %></h1>

    <%= form_with url: reminder_path(reminder), method: :delete do |form| %>
        <button type="submit" class="text-gray-500 hover:text-red-500 cursor-pointer opacity-0 group-hover:opacity-100 transition duration-100"><i class="fas fa-fw fa-trash"></i></button>
    <% end %>
</div>