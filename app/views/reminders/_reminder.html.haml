%div.group.bg-black.text-xl.p-5.rounded-md.flex.justify-between.items-center.gap-5.border-2.border-transparent.relative.break-words.cursor-default{class: [flash[:highlighted_reminder] == reminder.id && "reminder--highlighted"]}
	%h1.font-semibold.font-heading.break-words.min-w-0= reminder.title
	= form_with url: reminder_path(reminder), method: :delete do |form|
		%button.text-gray-500.hover:text-red-500.cursor-pointer.opacity-0.group-hover:opacity-100.transition.duration-100(type="submit")
			%i.fas.fa-fw.fa-trash