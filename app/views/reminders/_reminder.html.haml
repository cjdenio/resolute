%div
	.group.bg-black.p-5.rounded-md.flex.justify-between.items-center.gap-5.border-2.border-transparent.relative.break-words.cursor-default{class: [flash[:highlighted_reminder] == reminder.id && "reminder--highlighted"]}
		.flex.flex-col.gap-3.min-w-0.grow
			- if reminder.title.present? && reminder.url.present?
				%div
					%a.font-semibold.font-heading.break-words.min-w-0.text-xl{href: reminder.url}= reminder.title
			- elsif reminder.title.present?
				.font-semibold.font-heading.break-words.min-w-0.text-xl= reminder.title

			- if reminder.author.present?
				.flex.gap-3.items-center.text-sm.text-gray-300
					- if reminder.author_avatar.present?
						%img.w-5.rounded-full{src: reminder.author_avatar}
					%span= reminder.author

			.break-words.min-w-0.text-white.hover:no-underline
				= reminder.description
				- if reminder.url.present? && reminder.title.blank?
					%a.ml-2.transition-opacity.opacity-0.group-hover:opacity-100{href: reminder.url, target: "_blank"}
						%i.fas.fa-link

			- if reminder.oauth_app.present?
				.text-xs.text-gray-400 from #{reminder.oauth_app.name}

		= form_with url: reminder_path(reminder), method: :delete do |form|
			%button.text-gray-500.hover:text-red-500.cursor-pointer.opacity-0.group-hover:opacity-100.transition(type="submit" title="Delete")
				%i.fas.fa-fw.fa-trash.text-xl
